<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.android.safar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/app_icon2"
            android:label="@string/app_name"
            android:roundIcon="@drawable/app_icon2"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.FavouritesActivity" />
        <activity
                android:name=".ui.UserProfileActivity"
                android:parentActivityName=".ui.CountryDetailActivity" />
        <activity
                android:name=".ui.LogoActivity"
                android:noHistory="true"
                android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.AboutCountryActivity"
                android:parentActivityName=".ui.CountryDetailActivity" />
        <activity
                android:name=".ui.AttractionMoreInfoActivity"
                android:parentActivityName=".ui.CountryDetailActivity" />
        <activity
                android:name=".ui.AdminActivity"
                android:label="Admin"
                android:parentActivityName=".ui.MainActivity" />
        <activity
                android:name=".ui.CountryDetailActivity"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".ui.CountryActivity"
                android:label="@string/choose_a_country" />
        <activity
                android:name=".ui.RegisterActivity"
                android:label="Register"
                android:parentActivityName=".ui.MainActivity" />
        <activity
                android:name=".ui.MainActivity"
                android:label="@string/app_name" />
    </application>

</manifest>