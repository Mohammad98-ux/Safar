<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/country_activity_root_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        tools:context=".ui.CountryActivity">

    <ListView
            android:id="@+id/country_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_list_view"
            android:divider="@drawable/list_divider"
            android:focusable="false" />

    <TextView
            android:id="@+id/country_empty_state_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.8"
            android:text="@string/empty_fav_countries"
            android:textSize="25sp"
            android:visibility="gone" />

</RelativeLayout>