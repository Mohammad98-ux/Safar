<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogDarkTheme">
        <item name="android:background">@color/background_black</item>
    </style>

    <!-- Style for edit texts used in this app. -->
    <style name="EditTextsStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColorHint">#94C0FF</item>>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style for buttons used in this app. -->
    <style name="ButtonsStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <!-- Style for names displayed above images (Attractions' name and Countries' names). -->
    <style name="NameAboveImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for images displayed below text (Attractions' and Countries').-->
    <style name="ImageBelowText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AboutCountryActivityHeaderTextViews">
        <item name="android:textColor">#03A9F4</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="InfoFragmentHeaderResultTextViews">
        <item name="android:textColor">#BBBBBB</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AttractionMorePicsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="CountryCultureTextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PublicPlacesDialogTextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#BBBBBB</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
















